<%!
    public boolean isSelected(ListOption option, String value) {
        String optText = option.getText();
        String optVal  = option.getValue();
        if (optVal == null || optVal.length() == 0) {
            optVal = optText;
        }

        boolean selected = false;
        if ((value == null || value.length() == 0) && (option.isDefaultSelected())) {
            selected = true;
        } else {
            if (value != null) {
                String[] values = value.split(",");
                for (int j = 0; j < values.length; j++) {
                    String v = values[j];
                    if (v.equalsIgnoreCase(optVal)) {
                        selected = true;
                        break;
                    }
                }
            }
        }

        return selected;
    }

%>
<%
    {
        Content content = (Content)request.getAttribute("content");
        String fieldName = (String) request.getAttribute("fieldName");
        Boolean alwaysUseSelectList = (Boolean) request.getAttribute("alwaysUseSelectList");
        
        String value = attribute.getValue();
        List options = attribute.getListOptions(content.getLanguage());
        if (attribute.getMultiple() && alwaysUseSelectList == null) {
            out.write("<div class=\"inpSelectList\">");
            out.write("<table border=\"0\">");
            if (options != null) {
                for (int i = 0; i < options.size(); i++) {
                    ListOption option  = (ListOption)options.get(i);
                    String optText = option.getText();
                    String optVal  = option.getValue();
                    if (optVal == null || optVal.length() == 0) {
                        optVal = optText;
                    }
                    out.write("<tr>");
                    out.write("<td><input id=\"" + (fieldName + i) + "\" type=\"checkbox\"");
                    out.write(" name=\"" + fieldName + "\"");
                    out.write(" value=\"" + optVal + "\"");
                    if (isSelected(option, value)) {
                        out.write(" checked=\"checked\"");
                    }
                    out.write(">");
                    out.write("</td>");
                    out.write("<td>");
                    out.write("<label for=\"" + (fieldName + i) + "\">" + optText + "</label>");
                    out.write("</td>");
                    out.write("</tr>");
                }
            }
            out.write("</table>");
            out.write("</div>");
        } else {
            out.write("<select class=\"fullWidth\"");
            out.write(" tabindex=\"" + attribute.getTabIndex() + "\"");
            out.write(" id=\"" + fieldName + "\"");
            if (attribute.getMultiple()) {
                out.write(" multiple size=\"8\"");
            }
            out.write(" name=\"" + fieldName + "\">");
            if (options != null) {
                for (int i = 0; i < options.size(); i++) {
                    ListOption option  = (ListOption)options.get(i);
                    String optText = option.getText();
                    String optVal  = option.getValue();
                    if (optVal == null || optVal.length() == 0) {
                        optVal = optText;
                    }

                    out.write("<option");
                    out.write(" value=\"" + optVal + "\"");
                    if (isSelected(option, value)) {
                        out.write(" selected=\"selected\"");
                    }
                    out.write(">");
                    out.write(optText);
                    out.write("</option>");
                }
            }
            out.write("</select>");
        }
    }
%>
