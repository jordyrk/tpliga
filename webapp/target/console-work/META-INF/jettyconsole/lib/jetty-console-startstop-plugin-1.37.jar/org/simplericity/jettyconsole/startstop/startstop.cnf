# DEPLOYCMD="wget -O $JAR http://example.com/releases/latest/%1$s.war"
# DEPLOYCMD="wget -O $JAR http://example.com/releases/latest/$2"
# DEPLOYCMD="curl -o $JAR http://example.com/releases/latest/%1$s.war"
